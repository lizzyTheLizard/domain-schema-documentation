<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{htmlRelativeLink $id '/index.html'}}">Application</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
  </ol>
</nav>

<h1>{{{title}}}</h1>

{{#if x-todos}}
<div class="alert alert-danger" role="alert">
  <ul>
{{#each x-todos}}
    <li>{{this}}</li>
{{/each}}
  </ul>
</div>
{{/if}}

<section>
  <p>{{description}}</p>
</section>

{{#if schemas}}
<section>
  <h2>Schemas</h2>
{{#if classDiagram}}
  <pre id="mermaid">
  classDiagram
  {{{classDiagram}}}
  </pre>
{{/if}}
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
{{#each schemas}}
      <tr>
        <td><a href="{{htmlRelativeLink ../$id $id}}.html">{{title}}</a></td>
        <td>{{x-schema-type}}</td>
        <td>{{description}}</td>
      </tr>
{{/each}}
    </tbody>
  </table>
</section>
{{/if}}

{{#if x-links}}
<section>
  <h2>Links</h2>
  <ul>
  {{#each x-links}}
    <li><a href="{{href}}">{{text}}</a></li>
  {{/each}}
  </ul>
</section>
{{/if}}
