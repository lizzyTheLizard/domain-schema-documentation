    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Example",
            "runtimeExecutable": "yarn",            
            "runtimeArgs": [
                "workspace",
                "example",
                "generate"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
        }, {
            "type": "node",
            "request": "launch",
            "name": "Run Example (Watch Mode)",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "workspace",
                "example",
                "generate:watch"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
        }, {
            "type": "node",
            "request": "launch",
            "name": "Run OpenApi Test",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "workspace",
                "test-openapi",
                "integration-tests"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
        }
    ]
}